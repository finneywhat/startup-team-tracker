<!-- team-member-form.vtl -->
<div class="row">
  <div class="col-md-push-2 col-md-8">
    <h2>Add New Member to $team.getTeamName()</h2>

    <div class="form-group">
      <form action="/members" method="post" class="well">
        <input type="hidden" name="teamId" id="teamId" value="$team.getId()">
        <label for="member">Member Name</label>
        <input id="member" name="member" type="text" class="form-control">
        <br>
        <label for="home">Hometown</label>
        <input id="home" name="home" type="text" class="form-control">
        <br>
        <label for="home">Current Employer</label>
        <input id="employer" name="employer" type="text" class="form-control">
        <br>
        <label for="home">Coding Specialties</label>
        <input id="coding" name="coding" type="text" class="form-control">
        <br>
        <button type="submit" class="btn btn-success">Add Member</button>
      </form>
    </div>
    <br>
    <a href="/" class="btn btn-primary index-btn">Home</a>
  </div>
</div>
<!-- team-member-form.vtl -->
